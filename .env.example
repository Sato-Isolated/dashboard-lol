# Database
DB_CONN_STRING="mongodb://localhost:27017"
DB_NAME="lol_dashboard"
GAMES_COLLECTION_NAME="games"

# Riot API
RIOT_API_KEY=your_api_key_here
RIOT_API_BASE_URL=https://na1.api.riotgames.com

# Development mode - set to true to mock API calls when API key has insufficient permissions
DEV_MODE_MOCK_API=false

# Environment
NODE_ENV=development
PORT=3000

# Logging
LOG_LEVEL=info

# Rate Limiting
RIOT_API_RATE_LIMIT_PER_SECOND=20
RIOT_API_RATE_LIMIT_PER_MINUTE=100

# Cache Settings
CACHE_TTL_SUMMONER=3600
CACHE_TTL_MATCHES=1800
CACHE_TTL_RANKINGS=300

# Better Auth Configuration
BETTER_AUTH_SECRET=your-random-secret-key-here-min-32-characters
BETTER_AUTH_URL=http://localhost:3000

# Social Auth Providers (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret